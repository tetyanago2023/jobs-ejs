<!--/views/jobs.ejs-->

<%- include("partials/head.ejs") %>
<%- include("partials/header.ejs") %>

<h2>Jobs List</h2>

<!-- Add New Job Button -->
<div style="margin-bottom: 20px;">
    <a href="/jobs/new">
        <button type="button" class="btn btn-primary">Add New Job</button>
    </a>
</div>

<table id="jobs-table" class="table">
    <thead>
    <tr id="jobs-table-header">
        <th>Company</th>
        <th>Position</th>
        <th>Status</th>
        <th colspan="3"></th> <!-- Adjusted colspan for new "Show Job" button -->
    </tr>
    </thead>
    <tbody>
    <% if (jobs && jobs.length) { %>
        <% jobs.forEach((job) => { %>
            <tr>
                <td><%= job.company %></td>
                <td><%= job.position %></td>
                <td><%= job.status %></td>
                <td>
                    <!-- Show Job Button -->
                    <a href="/jobs/<%= job.id %>">
                        <button type="button" class="btn btn-info">Show Job</button>
                    </a>
                </td>
                <td>
                    <!-- Edit Button -->
                    <a href="/jobs/edit/<%= job.id %>">
                        <button type="button" class="btn btn-warning">Edit</button>
                    </a>
                </td>
                <td>
                    <!-- Delete Button -->
                    <form method="POST" action="/jobs/delete/<%= job.id %>" style="display:inline;">
                        <input type="hidden" name="_csrf" value="<%= _csrf %>"> <!-- CSRF Token -->
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        <% }) %>
    <% } else { %>
        <tr>
            <td colspan="6" class="text-center">No jobs found. Click button "Add New Job" above to create one!</td>
        </tr>
    <% } %>
    </tbody>
</table>

<%- include("partials/footer.ejs") %>
