<!--/view/jobs.ejs-->

<%- include("partials/head.ejs") %>
<%- include("partials/header.ejs") %>

<h2>Jobs List</h2>

<!-- Add New Job Button -->
<div style="margin-bottom: 20px;">
    <a href="/jobs/new">
        <button type="button" class="btn btn-primary">Add New Job</button>
    </a>
</div>

<!-- Job Table with Filters in Headers -->
<form method="GET" action="/jobs" style="display:inline;">
    <table id="jobs-table" class="table">
        <thead>
        <tr>
            <th>Company</th>
            <th>Position</th>
            <th>Status</th>
            <th colspan="3"></th> <!-- For Show/Edit/Delete buttons -->
        </tr>
        <tr id="jobs-table-header">
            <!-- Company Filter in Header -->
            <th>
                <input type="text" class="form-control" name="company" placeholder="Filter by Company" value="<%= companyFilter %>">
            </th>
            <!-- Position Filter in Header -->
            <th>
                <input type="text" class="form-control" name="position" placeholder="Filter by Position" value="<%= positionFilter %>">
            </th>
            <!-- Status Filter in Header -->
            <th>
                <input type="text" class="form-control" name="status" placeholder="Filter by Status" value="<%= statusFilter %>">
            </th>
            <th colspan="3">
                <!-- Apply Filters Button -->
                <button type="submit" class="btn btn-info" style="margin-top: 5px;">Apply Filters</button>
                <!-- Reset Filters Button -->
                <a href="/jobs" class="btn btn-secondary" style="margin-top: 5px;">Reset Filters</a>
            </th>
        </tr>
        </thead>
        <tbody>
        <% if (jobs && jobs.length) { %>
            <% jobs.forEach((job) => { %>
                <tr>
                    <td><%= job.company %></td>
                    <td><%= job.position %></td>
                    <td><%= job.status %></td>
                    <td>
                        <!-- Show Job Button -->
                        <a href="/jobs/<%= job.id %>">
                            <button type="button" class="btn btn-info">Show Job</button>
                        </a>
                    </td>
                    <td>
                        <!-- Edit Button -->
                        <a href="/jobs/edit/<%= job.id %>">
                            <button type="button" class="btn btn-warning">Edit Job</button>
                        </a>
                    </td>
                    <td>
                        <!-- Delete Button -->
                        <form method="POST" action="/jobs/delete/<%= job.id %>" style="display:inline;" id="delete-form-<%= job.id %>">
                            <input type="hidden" name="_csrf" value="<%= _csrf %>"> <!-- CSRF Token -->
                            <button type="submit" class="btn btn-danger delete-button">Delete Job</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        <% } else { %>
            <tr>
                <td colspan="6" class="text-center">No jobs found. Click the "Add New Job" button above to create one!</td>
            </tr>
        <% } %>
        </tbody>
    </table>
</form>

<!-- Pagination Controls -->
<div class="pagination">
    <% if (hasPrevPage) { %>
        <a href="/jobs?page=<%= currentPage - 1 %>&limit=<%= limit %>&company=<%= companyFilter %>&position=<%= positionFilter %>&status=<%= statusFilter %>" class="btn btn-secondary">Previous</a>
    <% } else { %>
        <button class="btn btn-secondary" disabled>Previous</button>
    <% } %>

    <span>Page <%= currentPage %> of <%= totalPages %></span>

    <% if (hasNextPage) { %>
        <a href="/jobs?page=<%= currentPage + 1 %>&limit=<%= limit %>&company=<%= companyFilter %>&position=<%= positionFilter %>&status=<%= statusFilter %>" class="btn btn-secondary">Next</a>
    <% } else { %>
        <button class="btn btn-secondary" disabled>Next</button>
    <% } %>
</div>

<!-- Script to add confirmation before deleting a job -->
<script>
    // Add confirmation before deleting a job
    document.querySelectorAll('.delete-button').forEach(button => {
        button.addEventListener('click', function(event) {
            const confirmation = confirm("Are you sure you want to delete this job?");
            if (!confirmation) {
                event.preventDefault(); // Prevent form submission if canceled
            }
        });
    });
</script>

<%- include("partials/footer.ejs") %>
